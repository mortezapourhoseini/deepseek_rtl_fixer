{
  "manifest_version": 3,
  "name": "RTL Fixer for Deepseek",
  "version": "1.0",
  "description": "Fix RTL text alignment for Persian content on Deepseek.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.deepseek.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
